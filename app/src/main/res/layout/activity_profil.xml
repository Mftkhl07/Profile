            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/email"
                android:tint="#fff"/>

            <LinearLayout
                android:layout_width="match_parent"
